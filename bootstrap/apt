#!/usr/bin/env bash

install_apt() {
  sudo DEBIAN_FRONTEND=noninteractive apt-get install -y \
  -o Dpkg::Options::='--force-confdef' -o Dpkg::Options::='--force-confold' $@
}

packages='
abook
ack-grep
apt-file
autossh
awscli
backupninja
build-essential
cmake
colordiff
curl
darktable
default-jdk
doxygen
duply
